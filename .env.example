# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Firebase Configuration
# Get these from Firebase Console → Project Settings → General
FIREBASE_API_KEY=your_api_key_here
FIREBASE_APP_ID=your_app_id_here
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_PROJECT_ID=your_project_id_here

# Android specific
FIREBASE_STORAGE_BUCKET=your_storage_bucket_here

# iOS specific (if different)
IOS_CLIENT_ID=your_ios_client_id_here
IOS_BUNDLE_ID=com.yourcompany.turoudi

# App Configuration
APP_NAME=Turoudi
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# API Configuration (if you have custom backend)
API_BASE_URL=https://your-api-url.com/api
API_TIMEOUT=30000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
DEBUG_MODE=false

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key_here
VAPID_KEY=your_vapid_key_here

# Third-party Integrations (optional)
GOOGLE_MAPS_API_KEY=your_google_maps_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_key_here

# Development
DEV_MODE=true
MOCK_DATA=false

# Notes:
# - Never commit actual values to git
# - Keep this file secure
# - Share values through secure channels only
# - Use different values for dev/staging/production
