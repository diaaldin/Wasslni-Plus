rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isValidImageSize() {
      return request.resource.size < 5 * 1024 * 1024; // 5MB
    }
    
    function isValidDocumentSize() {
      return request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isDocument() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType.matches('application/pdf');
    }
    
    // User profile photos
    match /users/{userId}/profile.{extension} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) && isImage() && isValidImageSize();
      allow delete: if isOwner(userId);
    }
    
    // User business licenses (merchants only)
    match /users/{userId}/documents/license.{extension} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && isDocument() && isValidDocumentSize();
      allow delete: if isOwner(userId);
    }
    
    // Parcel images
    match /parcels/{parcelId}/images/{imageId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isImage() && isValidImageSize();
      allow delete: if isAuthenticated();
    }
    
    // Proof of delivery
    match /parcels/{parcelId}/proof_of_delivery/{imageId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isImage() && isValidImageSize();
      allow delete: if isAuthenticated();
    }
    
    // Delivery signatures
    match /parcels/{parcelId}/signature/{imageId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isImage() && isValidImageSize();
      allow delete: if isAuthenticated();
    }
  }
}
